<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.okunan.tunahan.havadurumuuygulamasi.MainActivity">

    <TextView
        android:id="@+id/sehir_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Åžehir Giriniz"
        android:textAlignment="center"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sehir_edit_text"
        android:layout_below="@id/sehir_text_view"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_click_me"
        android:layout_below="@id/sehir_edit_text"
        android:id="@+id/click_me_button"
        android:layout_margin="4dp"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scroll_view"
        android:layout_below="@+id/click_me_button"

        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="4dp"
            android:id="@+id/fetched_data_text_view"
            android:text="@string/main_fetched_text_here"
            android:textSize="24sp"
            />
    </ScrollView>

</RelativeLayout>
